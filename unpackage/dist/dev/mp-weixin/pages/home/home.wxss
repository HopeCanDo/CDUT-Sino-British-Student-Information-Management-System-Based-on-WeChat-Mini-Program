.content {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  font-size: 28rpx;
  background-image: linear-gradient(208deg, #f3f3dc 10%, #cacaff 20%, #f8f6df 50%);
}
.top {
  display: flex;
  margin-top: 10rpx;
}
.top .ability {
  margin-left: 8rpx;
  margin-right: 10rpx;
  width: 50%;
  color: #060219;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: bolder;
  box-shadow: 9rpx 9rpx 10rpx #818181;
}
.top .ability:nth-child(1) {
  background-image: linear-gradient(0deg, #ff6179 10%, #f8f8f8 100%);
}
.top .ability:nth-child(2) {
  background-image: linear-gradient(0deg, #ff743d 10%, #f8f8f8 100%);
}
.top .ability image {
  height: 158rpx;
  width: 158rpx;
}
.top .ability text {
  margin-top: 30rpx;
}
